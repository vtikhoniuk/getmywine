# Database
POSTGRES_USER=getmywine
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=getmywine
DATABASE_URL=postgresql+asyncpg://getmywine:change-me-in-production@db:5432/getmywine

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# Email (for password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp-password
SMTP_FROM=GetMyWine <noreply@example.com>

# Rate limiting
RATE_LIMIT_LOGIN=5/15minutes
RATE_LIMIT_REGISTER=3/hour
RATE_LIMIT_PASSWORD_RESET=3/hour

# LLM Configuration
# Provider: "openrouter" (recommended), "anthropic", or "openai"
LLM_PROVIDER=openrouter

# OpenRouter (recommended) - get key at https://openrouter.ai/keys
# Supports many models via single API
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Direct API keys (alternative to OpenRouter)
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx
# OPENAI_API_KEY=sk-xxxxxxxxxxxx

# Model settings
# OpenRouter models: "anthropic/claude-sonnet-4", "openai/gpt-4o", "google/gemini-2.0-flash-exp"
# Direct Anthropic: "claude-sonnet-4-20250514"
# Direct OpenAI: "gpt-4o"
LLM_MODEL=anthropic/claude-sonnet-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_MAX_HISTORY_MESSAGES=10

# Telegram Bot
# Get token from @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_MODE=polling
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook
ENABLE_TELEGRAM_BOT=true
TELEGRAM_SESSION_INACTIVITY_HOURS=24
TELEGRAM_WINE_PHOTO_HEIGHT=460

# Langfuse (LLM observability)
# Self-hosted Langfuse for tracing LLM calls, costs, and quality
LANGFUSE_SECRET_KEY=sk-lf-dev-secret
LANGFUSE_PUBLIC_KEY=pk-lf-dev-public
LANGFUSE_HOST=http://langfuse-web:3000
LANGFUSE_TRACING_ENABLED=true