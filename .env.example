# Database
POSTGRES_USER=ai_sommelier
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=ai_sommelier
DATABASE_URL=postgresql+asyncpg://ai_sommelier:change-me-in-production@db:5432/ai_sommelier

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# Email (for password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp-password
SMTP_FROM=AI-Sommelier <noreply@example.com>

# Rate limiting
RATE_LIMIT_LOGIN=5/15minutes
RATE_LIMIT_REGISTER=3/hour
RATE_LIMIT_PASSWORD_RESET=3/hour

# LLM Configuration
# Provider: "openrouter" (recommended), "anthropic", or "openai"
LLM_PROVIDER=openrouter

# OpenRouter (recommended) - get key at https://openrouter.ai/keys
# Supports many models via single API
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Direct API keys (alternative to OpenRouter)
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx
# OPENAI_API_KEY=sk-xxxxxxxxxxxx

# Model settings
# OpenRouter models: "anthropic/claude-sonnet-4", "openai/gpt-4o", "google/gemini-2.0-flash-exp"
# Direct Anthropic: "claude-sonnet-4-20250514"
# Direct OpenAI: "gpt-4o"
LLM_MODEL=anthropic/claude-sonnet-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_MAX_HISTORY_MESSAGES=10
